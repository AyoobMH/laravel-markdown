{
    "name": "spatie/laravel-markdown-blade-component",
    "description": "A fully featured Blade component to render markdown and highlight code snippets",
    "keywords": [
        "spatie",
        "laravel",
        "laravel-markdown-blade-component"
    ],
    "homepage": "https://github.com/spatie/laravel-markdown-blade-component",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.37"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\LaravelMarkdownBladeComponent\\": "src",
            "Spatie\\LaravelMarkdownBladeComponent\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\LaravelMarkdownBladeComponent\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\LaravelMarkdownBladeComponent\\LaravelMarkdownBladeComponentServiceProvider"
            ],
            "aliases": {
                "LaravelMarkdownBladeComponent": "Spatie\\LaravelMarkdownBladeComponent\\LaravelMarkdownBladeComponentFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
